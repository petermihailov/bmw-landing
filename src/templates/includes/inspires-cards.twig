<div class="inspires">
    <div class="inspires-glider inspires-list" data-index="{{ idx }}">
        {% for item in items %}
            <div class="inspires-card">
                <img class="inspires-card_bg lazy" data-src="{{ item.img }}" src="" alt="">
                <div class="inspires-card_header">
                    <h3>{{ item.title }}</h3>
                    <p>{{ item.description }}</p>
                </div>
            </div>
        {% endfor %}
    </div>
    <button role="button" aria-label="Previous" class="glider-prev">
        <svg class="prev" xmlns="http://www.w3.org/2000/svg" version="1.1" width="40"
             height="40">
            <path d="M23.5 11.5 L15.5 19.5 L23.5 27.5" stroke-linejoin="round" stroke-linecap="round"
                  style="fill:none; stroke:#fff; stroke-width:3px"></path>
        </svg>
    </button>
    <button role="button" aria-label="Next" class="glider-next">
        <svg class="next" xmlns="http://www.w3.org/2000/svg" version="1.1" width="40" height="40">
            <path d="M16.5 11.5 L24.5 19.5 L16.5 27.5" stroke-linejoin="round" stroke-linecap="round"
                  style="fill:none; stroke:#fff; stroke-width:3px"></path>
        </svg>
    </button>
</div>
