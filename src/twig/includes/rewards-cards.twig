<div class="rewards">
    {% for item in items %}
        <div class="reward-card">
            <img class="card-bg lazy" data-src="{{ item.img }}" src="" alt="">
            <div class="card-header">
                <h3>{{ item.title }}</h3>
                <p>{{ item.description }}</p>
            </div>
            <img class="coin-icon lazy" data-src="assets/coin.png" src="" alt="">
        </div>
    {% endfor %}
</div>
